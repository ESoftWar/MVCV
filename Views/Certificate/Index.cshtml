<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="tab-pane" id="timeline">
                                <div class="timeline timeline-inverse">
                                    @foreach (var x in Model)
                                    {
                                        <div class="time-label">
                                            <a href="/Certificate/CertificationGet/@x.ID" class="btn btn-success">
                                                <span class="bg-success">@x.Date</span>
                                            </a>
                                        </div>
                                        <div>
                                            <i class="fas fa-comment bg-primary"></i>
                                            <div class="timeline-item">
                                                <div class="timeline-body">@x.Description</div>
                                                <div class="timeline-footer">
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                                <a href="/Certificate/CertificationAdd" class="btn btn-outline-info">Add New Certificate</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>

