@using MVCV.Models.Entity
@model List<TBL_ABOUT>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2><b>About Page</b></h2>
<br />
<form method="post">
    @foreach (var x in Model)
    {
        <label>First Name</label>
        <input type="text" name="FirstName" value="@x.FirstName" class="form-control" />
        <br />
        <label>Last Name</label>
        <input type="text" name="LastName" value="@x.LastName" class="form-control" />
        <br />
        <label>Address</label>
        <input type="text" name="Address" value="@x.Address" class="form-control" />
        <br />
        <label>Phone</label>
        <input type="text" name="Phone" value="@x.Phone" class="form-control" />
        <br />
        <label>Mail</label>
        <input type="text" name="Mail" value="@x.Mail" class="form-control" />
        <br />
        <label>Description</label>
        <textarea rows="5" name="Description" class="form-control">@x.Description</textarea>
    }
    <br />
    <button class="btn btn-success">Update</button>
</form>


