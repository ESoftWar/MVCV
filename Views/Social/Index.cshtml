
@using MVCV.Models.Entity
@model List<TBL_SOCIAL>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2><b>SOCIAL MEDIA</b></h2>
<br />

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h1 class="card-title"><b>LIST</b></h1>
                            </div>
                            <div class="card-body">
                                <button class="btn btn-outline-primary" data-toggle="modal" data-target="#Modal1">
                                    Add New Social Media Account
                                </button>
                                <br />
                                <br />
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th style="width: 10px">#</th>
                                            <th>Name</th>
                                            <th>Link</th>
                                            <th>Delete</th>
                                            <th>Update</th>
                                        </tr>
                                    </thead>

                                    <tbody>
                                        @foreach (var x in Model)
                                        {

                                            <tr>
                                                <td>@x.ID</td>
                                                <td>@x.NAME</td>
                                                <td>@x.LINK</td>
                                                <td>
                                                    <a href="/Social/Delete/@x.ID" class="btn btn-outline-danger btn-sm">
                                                        <i class="fas fa-trash">
                                                        </i>
                                                        Delete
                                                    </a>
                                                </td>
                                                <td>
                                                    <a href="/Social/Update/@x.ID" class="btn btn-outline-primary btn-sm">
                                                        <i class="fas fa-pencil-alt">
                                                        </i>
                                                        Update
                                                    </a>
                                                </td>

                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <div class="modal" id="Modal1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h2 class="modal-title">Add Social Media</h2>
                    </div>
                    <form method="post" action="/Social/ADD">
                        <div class="modal-body">
                            <label>Name</label>
                            <input type="text" name="NAME" class="form-control" />
                            <br />
                            <label>Link</label>
                            <input type="text" name="LINK" class="form-control" />
                            <br />
                            <label>Icon</label>
                            <input type="text" name="ICON" class="form-control" />
                            <br />
                            <button class="btn btn-outline-info">Add</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>


